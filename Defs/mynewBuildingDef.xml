<?xml version="1.0" encoding="utf-8"?>

<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>MM_Loving1x</defName>
        <label>Loving1x spot</label>
        <description>Designates a spot where marriage ceremonies will take place. Spectators can
            watch from either side.</description>
        <thingClass>Building_MarriageSpot</thingClass>
        <graphicData>
            <texPath>love_prop</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <statBases>
            <WorkToBuild>0</WorkToBuild>
        </statBases>
        <useHitPoints>False</useHitPoints>
        <scatterableOnMapGen>false</scatterableOnMapGen>
        <size>(1,1)</size>
        <designationCategory>Misc</designationCategory>
        <uiOrder>2000</uiOrder>
        <passability>Standable</passability>
        <building>
            <sowTag>SupportPlantsOnly</sowTag>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <wakeDormantPawnsOnConstruction>false</wakeDormantPawnsOnConstruction>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
        </building>
        <ritualFocus>
            <spectateDistance>2</spectateDistance>
            <allowedSpectateSides>Down</allowedSpectateSides>
        </ritualFocus>
        <placeWorkers>
            <li>PlaceWorker_SpectatorPreview</li>
        </placeWorkers>
        <drawPlaceWorkersWhileSelected>True</drawPlaceWorkersWhileSelected>
    </ThingDef>

